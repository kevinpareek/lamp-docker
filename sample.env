## ============================================
## LAMP Docker - Configuration
## ============================================
## Copy: cp sample.env .env
## Configure: lamp config
## ============================================

## Project
COMPOSE_PROJECT_NAME=lamp

## ============================================
## Environment: development | production
## ============================================
APP_ENV=development
APP_DEBUG=true

## ============================================
## PHP Version
## ============================================
## Options: php74, php8, php81, php82, php83, php84, php85
PHPVERSION=php84
INSTALL_XDEBUG=true

## ============================================
## Database
## ============================================
## Options: mysql57, mysql8, mysql84, mariadb103, mariadb104, mariadb105, mariadb106, mariadb1011, mariadb114
## Apple Silicon: Use MariaDB
DATABASE=mariadb114

## ============================================
## Ports
## ============================================
HOST_MACHINE_UNSECURE_HOST_PORT=80
HOST_MACHINE_SECURE_HOST_PORT=443
HOST_MACHINE_MYSQL_PORT=3306
HOST_MACHINE_PMA_PORT=8080
HOST_MACHINE_REDIS_PORT=6379

## ============================================
## Paths
## ============================================
DOCUMENT_ROOT=./www
APACHE_DOCUMENT_ROOT=/var/www/html
VHOSTS_DIR=./config/vhosts
APACHE_LOG_DIR=./logs/apache2
PHP_INI=./config/php/php.ini
SSL_DIR=./config/ssl
BACKUP_DIR=./data/backup
MYSQL_INITDB_DIR=./config/initdb
MYSQL_DATA_DIR=./data/mysql
MYSQL_LOG_DIR=./logs/mysql
REDIS_DATA_DIR=./data/redis
NGINX_CONF_DIR=./config/nginx
NGINX_LOG_DIR=./logs/nginx

## ============================================
## Database Credentials
## ============================================
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=docker
MYSQL_USER=docker
MYSQL_PASSWORD=docker

## ============================================
## Services Config
## ============================================
UPLOAD_LIMIT=512M
MEMORY_LIMIT=512M
