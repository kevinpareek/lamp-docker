## ============================================
## PHP Turbo Stack - Configuration
## ============================================
## Copy: cp sample.env .env
## Configure: tbs config
## ============================================
## SECURITY WARNING: Change default passwords in production!
## ============================================

## Project
COMPOSE_PROJECT_NAME=turbo-stack

## Linux Permissions (Optional)
## Run 'id -u' and 'id -g' on your host and put the values here
## This prevents root-owned files in your project folder on Linux
USER_ID=1000
GROUP_ID=1000

## ============================================
# Installation Type: local | live
## ============================================
# local: Uses mkcert for all domains (trusted local SSL)
# live: Uses Let's Encrypt for public domains
INSTALLATION_TYPE=local

## ============================================
## Environment: development | production
## ============================================
APP_ENV=development
APP_DEBUG=true

## ============================================
## Stack Mode
## ============================================
## Options: hybrid (Apache + Nginx), thunder (Nginx + PHP-FPM)
STACK_MODE=hybrid

## ============================================
## PHP Version
## ============================================
## Options: php7.4, php8.0, php8.1, php8.2, php8.3, php8.4, php8.5
PHPVERSION=php8.5
INSTALL_XDEBUG=true

## ============================================
## Database
## ============================================
## Options: mysql5.7, mysql8.0, mysql8.4, mariadb10.3, mariadb10.4, mariadb10.5, mariadb10.6, mariadb10.11, mariadb11.4
## Apple Silicon: Use MariaDB
DATABASE=mariadb11.4

## ============================================
## Ports
## ============================================
HOST_MACHINE_UNSECURE_HOST_PORT=80
HOST_MACHINE_SECURE_HOST_PORT=443
HOST_MACHINE_MYSQL_PORT=3306
HOST_MACHINE_PMA_PORT=8080
HOST_MACHINE_REDIS_PORT=6379
HOST_MACHINE_SSH_PORT=2244

## ============================================
## Paths
## ============================================
DOCUMENT_ROOT=./www
APPLICATIONS_DIR_NAME=applications
APACHE_DOCUMENT_ROOT=/var/www/html
VHOSTS_DIR=./sites/apache
APACHE_LOG_DIR=./logs/apache2
SSL_DIR=./sites/ssl
BACKUP_DIR=./data/backup
MYSQL_INITDB_DIR=./config/initdb
MYSQL_DATA_DIR=./data/mysql
MYSQL_LOG_DIR=./logs/mysql
REDIS_DATA_DIR=./data/redis
NGINX_CONF_DIR=./sites/nginx
NGINX_FPM_CONF_DIR=./sites/nginx-fpm
NGINX_LOG_DIR=./logs/nginx

## ============================================
## Database Credentials
## SECURITY: Change these in production!
## ============================================
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=docker
MYSQL_USER=docker
MYSQL_PASSWORD=docker

## ============================================
## TBS Admin (Master User)
## Used for: SSH Admin, Dashboard Login, API Access
## SECURITY: Change these in production!
## ============================================
TBS_ADMIN_USER=tbsadmin
TBS_ADMIN_PASSWORD=tbsadmin123
TBS_ADMIN_EMAIL=admin@localhost

## ============================================
## Redis Configuration
## ============================================
## Leave empty for no password (simplest setup for development)
## Set a strong password in production (recommended 32+ chars)
## Example: openssl rand -base64 32
## The entrypoint script automatically configures PHP sessions
REDIS_PASSWORD=

## ============================================
## Services Config
## ============================================
ENABLE_SSH=false
UPLOAD_LIMIT=512M
MEMORY_LIMIT=512M

## ============================================
## Performance Tuning
## ============================================
## Container memory limit
CONTAINER_MEMORY_LIMIT=512M

## Varnish cache size (default: 128M)
VARNISH_CACHE_SIZE=128M

## Memcached memory (MB)
MEMCACHED_MEMORY=64

## ============================================
## Xdebug Configuration (Development Only)
## ============================================
## Xdebug log directory for debugging
XDEBUG_LOG_DIR=./logs/xdebug
