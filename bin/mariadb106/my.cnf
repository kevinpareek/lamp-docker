# ============================================
# MariaDB 11.4 Optimized Configuration
# Auto-tuned for Docker containers
# ============================================

[mysqld]
# ============================================
# Basic Settings
# ============================================
user                            = mysql
pid-file                        = /var/run/mysqld/mysqld.pid
socket                          = /var/run/mysqld/mysqld.sock
port                            = 3306
datadir                         = /var/lib/mysql
tmpdir                          = /tmp
default-storage-engine          = InnoDB
character-set-server            = utf8mb4
collation-server                = utf8mb4_unicode_ci
skip-character-set-client-handshake
explicit_defaults_for_timestamp = 1

# ============================================
# Network & Connections
# ============================================
bind-address                    = 0.0.0.0
max_connections                 = 200
max_connect_errors              = 100000
wait_timeout                    = 600
interactive_timeout             = 600
net_read_timeout                = 30
net_write_timeout               = 60
max_allowed_packet              = 64M

# ============================================
# Security
# ============================================
skip-name-resolve
local-infile                    = 0
symbolic-links                  = 0

# ============================================
# InnoDB Engine (Performance Optimized)
# ============================================
innodb_buffer_pool_size         = 256M
innodb_buffer_pool_instances    = 1
innodb_log_file_size            = 128M
innodb_log_buffer_size          = 16M
innodb_file_per_table           = 1
innodb_flush_log_at_trx_commit  = 2
innodb_flush_method             = O_DIRECT
innodb_read_io_threads          = 4
innodb_write_io_threads         = 4
innodb_io_capacity              = 1000
innodb_io_capacity_max          = 2000
innodb_lock_wait_timeout        = 60
innodb_thread_concurrency       = 0
innodb_autoinc_lock_mode        = 2
innodb_strict_mode              = 1
innodb_print_all_deadlocks      = 1

# ============================================
# Query Optimization
# ============================================
tmp_table_size                  = 64M
max_heap_table_size             = 64M
join_buffer_size                = 2M
sort_buffer_size                = 2M
read_buffer_size                = 1M
read_rnd_buffer_size            = 1M
bulk_insert_buffer_size         = 16M

# ============================================
# Table Cache
# ============================================
table_open_cache                = 2000
table_definition_cache          = 1000
open_files_limit                = 65535

# ============================================
# Slow Query Log
# ============================================
slow_query_log                  = 1
slow_query_log_file             = /var/log/mysql/slow-query.log
long_query_time                 = 1
log_queries_not_using_indexes   = 0
min_examined_row_limit          = 100

# ============================================
# Error & General Logging
# ============================================
log_error                       = /var/log/mysql/error.log
log_warnings                    = 2

# ============================================
# Binary Logging (Uncomment for Replication)
# ============================================
# log-bin                       = mysql-bin
# binlog_format                 = ROW
# binlog_expire_logs_seconds    = 604800
# max_binlog_size               = 100M
# sync_binlog                   = 1

# ============================================
# Performance Schema (Disable for low memory)
# ============================================
performance_schema              = OFF

[client]
port                            = 3306
socket                          = /var/run/mysqld/mysqld.sock
default-character-set           = utf8mb4

[mysql]
default-character-set           = utf8mb4
prompt                          = "\\u@\\h [\\d]> "

[mysqldump]
quick
quote-names
max_allowed_packet              = 256M
single-transaction
